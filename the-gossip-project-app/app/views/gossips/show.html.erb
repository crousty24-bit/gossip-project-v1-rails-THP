<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card shadow-lg border-0">
        <!-- Header avec fond orange doux -->
        <div class="card-header" style="background-color: #FFA756; color: white;">
          <h2 class="mb-0"><%= @gossip.title %></h2>
        </div>

        <div class="card-body">
          <!-- Auteur avec badge -->
          <p class="mb-2">
            <span class="badge" style="background-color: #FFC28D; color: #333;">
              Auteur : <%= link_to @gossip.user.first_name, user_path(@gossip.user.id) %>
            </span>
          </p>

        <div class="d-flex align-items-center gap-2 text-muted small mb-3">
          <span>
            Cr√©√© le <%= @gossip.created_at.strftime("%d %B %Y") %>
          </span>

          <% if @gossip.user&.city %>
            <span class="border rounded-pill px-2 py-0 text-secondary">
              üìç <%= link_to @gossip.user.city.name, city_path(@gossip.user.city.id) %>
            </span>
          <% end %>
        </div>

        <div class="mb-3">
          <% @gossip.tags.each do |tag| %>
            <span class="badge me-1" style="background-color: <%= tag.color %>;">
              <%= tag.title %>
            </span>
          <% end %>
        </div>

          <!-- Contenu du gossip -->
          <p class="lead" style="line-height: 1.6;"><%= @gossip.content %></p>
        </div>
        <div class="card-footer text-end bg-light">
          <%= link_to "Modifier ce potin", edit_gossip_path, class: "btn btn-outline-warning" %>
          <%= button_to "Supprimer ce potin", gossip_path(@gossip), method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Tu es s√ªr ? Vraiment ?" } } %>
        </div>

        <div class="card-footer text-end bg-light">
          <%= link_to "Retour √† la liste", root_path, class: "btn btn-outline-warning" %>
        </div>
      </div>


    </div>
  </div>
</div>

<!-- Affichage des Commentaires -->
<div class="container">
  <div class="comment-section">

    <!-- New Comment Form -->
    <div class="mb-4">
      <div class="d-flex gap-3">
        <!-- Avatar g√©n√©rique / anonyme -->
        <img src="https://randomuser.me/api/portraits/women/4.jpg" alt="User Avatar" class="user-avatar">

        <div class="flex-grow-1">
          <%= form_with(model: [@gossip, @comment], local: true) do |f| %>
            <%= f.text_area :content,
                  class: "form-control comment-input",
                  rows: 3,
                  placeholder: "√âcris un commentaire..." %>

            <div class="mt-3 text-end">
              <%= f.submit "Publier le commentaire", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Comments List -->
    <div class="comments-list">
      <% @comments.each do |comment| %>
        <div class="comment-box">
          <div class="d-flex gap-3">
            <img src="https://i.pravatar.cc/60?u=<%= comment.user.email %>" alt="<%= comment.user.first_name %> avatar" class="user-avatar">

            <div class="flex-grow-1">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">
                  <%= comment.user&.first_name || "Anonyme" %>
                </h6>

                <!-- Exemple simple : date de cr√©ation -->
                <span class="comment-time">
                  <%= comment.created_at.strftime("%d %B %Y, %H:%M") %>
                </span>
              </div>

              <p class="mb-2"><%= comment.content %></p>

              <div class="comment-actions">
                <%= link_to "Editer", edit_gossip_comment_path(@gossip, comment), class: "btn btn-sm btn-secondary" %>
                <%= button_to "Supprimer", gossip_comment_path(@gossip, comment), 
                method: :delete, 
                class: "btn btn-sm btn-danger", 
                form: { data: { turbo_confirm: "Voulez-vous supprimer ce commentaire ?" } } %>
                <!-- Les ‚ÄúLike / Reply / Share‚Äù sont laiss√©s d√©coratifs -->
                <a href="#"><i class="bi bi-heart"></i> Like</a>
                <a href="#"><i class="bi bi-reply"></i> Reply</a>
                <a href="#"><i class="bi bi-share"></i> Share</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
