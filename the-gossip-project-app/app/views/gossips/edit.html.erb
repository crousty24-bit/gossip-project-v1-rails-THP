<form action="/gossips/<%= @gossip.id %>" data-turbo="false" method="post">

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="patch">

  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

          <h2 class="text-center mb-4 fw-bold">Modifie ton potin ðŸ«¢</h2>

          <div class="mb-3">
            <label for="gossip_title" class="form-label fw-semibold">Titre</label>
            <input 
              type="text" 
              name="gossip[title]" 
              id="gossip_title"
              class="form-control form-control-lg" 
              placeholder="<%= @gossip.title %>"
              value="<%= @gossip.title %>">
          </div>

          <div class="mb-4">
            <label for="gossip_content" class="form-label fw-semibold">Ton potin</label>
            <textarea 
              name="gossip[content]" 
              id="gossip_content"
              rows="5" 
              class="form-control form-control-lg" 
              placeholder="<%= @gossip.content %>"><%= @gossip.content %></textarea>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
              Modifier le potin
            </button>
          </div>

        </div>
      </div>
    </div>
  </div>
</form>
