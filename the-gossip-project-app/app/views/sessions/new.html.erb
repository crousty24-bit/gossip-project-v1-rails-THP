<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">Se connecter</h2>

          <%= form_with(url: sessions_path, local: true, data: { turbo: false }) do |f| %>
            
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <!-- Case Se souvenir de moi -->
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label", for: "remember_me" %>
            </div>

            <div class="d-grid mt-4">
              <%= f.submit "Se connecter", class: "btn btn-primary btn-lg" %>
            </div>

          <% end %>

          <div class="text-center mt-3">
            <p>Pas encore de compte ? <%= link_to "S'inscrire", new_user_path %></p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>