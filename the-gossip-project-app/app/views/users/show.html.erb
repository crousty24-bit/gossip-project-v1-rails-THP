<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8"> <!-- J'ai √©largi un peu la carte (de 6 √† 8) -->
      
      <!-- Ajout d'une ombre (shadow-lg) et bordure arrondie -->
      <div class="card shadow-lg border-0">
        
        <!-- En-t√™te orange -->
        <div class="card-header text-white text-center py-4" style="background-color: #FFC28D; color: #333;">
          <h3 class="mb-0">Profil</h3>
        </div>

        <div class="card-body p-5">
          <div class="row align-items-center">
            
            <!-- Colonne gauche : Avatar g√©n√©r√© automatiquement -->
            <div class="col-md-4 text-center mb-3 mb-md-0">
              <img 
                src="https://ui-avatars.com/api/?name=<%= @user.first_name %>+<%= @user.last_name %>&background=fd7e14&color=fff&size=150&font-size=0.5" 
                class="rounded-circle img-thumbnail shadow-sm" 
                alt="Avatar"
              >
            </div>

            <!-- Colonne droite : Informations -->
            <div class="col-md-8">
              <h2 class="card-title fw-bold" style="color: #fd7e14;">
                <%= @user.first_name %> <%= @user.last_name %>
              </h2>
              
              <hr> <!-- Ligne de s√©paration l√©g√®re -->

              <p class="card-text lead fst-italic">
                "<%= @user.description %>"
              </p>

              <div class="mt-4">
                <!-- Utilisation de Badges pour l'√¢ge et la ville -->
                <span class="badge rounded-pill bg-dark">
                  <%= @user.age %> ans
                </span>
                
                <% if @user.city %>
                  <span class="badge rounded-pill text-dark border border-warning" style="background-color: #ffe5d0;">
                    üìç <%= link_to @user.city.name, city_path(@user.city.id) %>
                  </span>
                <% end %>
              </div>

              <p class="mt-3 text-muted">
                <small>üìß Email : <%= @user.email %></small>
              </p>
            </div>
          </div>
        </div>

        <!-- Pied de page -->
        <div class="card-footer text-center text-muted bg-light py-3">
          Membre de la communaut√© depuis le <strong><%= @user.created_at.strftime("%d/%m/%Y") %></strong>
        </div>
        
      </div>
      
      <!-- Bouton retour (Facultatif mais conseill√© pour la navigation) -->
      <div class="text-center mt-4">
        <%= link_to "Retour √† l'accueil", root_path, class: "btn btn-outline-dark" %>
      </div>

    </div>
  </div>
</div>
